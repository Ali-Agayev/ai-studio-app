# Example environment variables for backend (do NOT commit secrets into repo)
# Copy this file to .env locally for development, and set real secrets in Render dashboard for production.

# Database
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# JWT
JWT_SECRET=your_jwt_secret_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Email (nodemailer) - optional
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Stripe
# Use Stripe test keys for sandbox, then replace with live keys for production.
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
# Webhook signing secret from Stripe (reveal after creating endpoint)
STRIPE_WEBHOOK_SECRET=whsec_...
# Frontend redirect URLs (optional)
FRONTEND_URL=https://your-frontend.example.com
STRIPE_SUCCESS_URL=${FRONTEND_URL}?success=true
STRIPE_CANCEL_URL=${FRONTEND_URL}?canceled=true
